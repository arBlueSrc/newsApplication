<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.trust.TrustFragment">


        <include
            android:id="@+id/include_specifications1"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            app:cardBackgroundColor="@color/custom_blue2"
            app:cardCornerRadius="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_specifications1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                 <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:fontFamily="@font/shabnam_bold"
                    android:text="شخص مورد نظر:"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_person_trust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:fontFamily="@font/shabnam"
                    app:layout_constraintBottom_toBottomOf="@+id/materialTextView101"
                    app:layout_constraintEnd_toStartOf="@+id/materialTextView101"
                    app:layout_constraintTop_toTopOf="@+id/materialTextView101"
                    tools:text="شخص مورد نیاز" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/shabnam_bold"
                    android:text="انبار:"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/materialTextView101"
                    app:layout_constraintTop_toBottomOf="@+id/materialTextView101" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_store_trust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:fontFamily="@font/shabnam"
                    app:layout_constraintBottom_toBottomOf="@+id/materialTextView111"
                    app:layout_constraintEnd_toStartOf="@+id/materialTextView111"
                    app:layout_constraintTop_toTopOf="@+id/materialTextView111"
                    tools:text="فضای مجازی" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/shabnam_bold"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/materialTextView111"
                    app:layout_constraintTop_toBottomOf="@+id/materialTextView111"
                    android:text="بخش:" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_part_trust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:fontFamily="@font/shabnam"
                    app:layout_constraintBottom_toBottomOf="@+id/materialTextView121"
                    app:layout_constraintEnd_toStartOf="@+id/materialTextView121"
                    app:layout_constraintTop_toTopOf="@+id/materialTextView121"
                    tools:text="فناوری" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardBackgroundColor="@color/custom_green"
            app:cardCornerRadius="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:fontFamily="@font/shabnam_bold"
                    android:text="نوع کالا:"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_type_trust"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:fontFamily="@font/shabnam"
                    app:layout_constraintBottom_toBottomOf="@+id/materialTextView131"
                    app:layout_constraintEnd_toStartOf="@+id/materialTextView131"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/materialTextView131"
                    tools:text="سیستم رومیزی" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView115"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/shabnam_bold"
                    android:text="شماره اموال:"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/materialTextView131"
                    app:layout_constraintTop_toBottomOf="@+id/materialTextView131" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_proprty_number_trust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/shabnam"
                    app:layout_constraintBottom_toBottomOf="@+id/materialTextView115"
                    app:layout_constraintEnd_toStartOf="@+id/materialTextView115"
                    app:layout_constraintTop_toTopOf="@+id/materialTextView115"
                    tools:text="4242424" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView171"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/shabnam_bold"
                    android:text="ویژگی های کالا:"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialTextView115" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_trust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialTextView171" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/shabnam_bold"
            android:text="امانت داده شود به:"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/cardView3"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView18">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_trust"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dropDownHeight="@dimen/_150sdp"
                android:fontFamily="@font/shabnam"
                android:hint="@string/chose_person"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>