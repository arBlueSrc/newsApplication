<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.salehinAcceptor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/night_back1</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/night_back1</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>



    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/shabnam</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>